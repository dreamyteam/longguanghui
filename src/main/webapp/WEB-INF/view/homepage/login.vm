#set($layout = "/layout/blank_layout.vm")<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"><html xmlns="http://www.w3.org/1999/xhtml"><head><meta http-equiv="Content-Type" content="text/html; charset=utf-8" /><meta name="renderer" content="webkit"><title>$!{platFormName}-- 登录</title><link href="/static/css/admin_style.css" rel="stylesheet" type="text/css" /><script src="/static/js/jquery-1.7.1.min.js" type="text/javascript"></script><script src="/static/js/cloud.js" type="text/javascript"></script><script language="javascript">$(function(){    $('.loginbox').css({'position':'absolute','left':($(window).width()-692)/2});	$(window).resize(function(){      	$('.loginbox').css({'position':'absolute','left':($(window).width()-692)/2});    })});function login() {	if(jQuery("#userName").val()==''){		addFieldError("用户名不能为空");		return false	}	if(jQuery("#userName").val().length>30){		addFieldError("用户名长度不能超过30个字符");		return false	}	if(jQuery("#pwd").val().length>30){		addFieldError("密码长度不能超过30个字符");		return false	}	jQuery('#form1').attr("action","/admin/loginPost.html").submit() ;}</script> </head><body style="background-color:#1c77ac; background-image:url($!{staticPath}/static/images/light.png); background-repeat:no-repeat; background-position:center top; overflow:hidden;"><form id="form1" name="form1" method="post" action="loginPost.html">    <div id="mainBody">    	<div id="cloud1" class="cloud"></div>    	<div id="cloud2" class="cloud"></div>    </div>  	<div class="logintop">    	    <span>欢迎使用</span>	    <ul>	    </ul>    	</div>	<div class="loginbody">		<span class="systemlogo"></span> 	    <div class="loginbox">		    <ul>			    <li>			    	<input name="userName" id="userName" type="text" class="loginuser" value="$!{userName}"			    		onkeydown="if(event.keyCode==13) {jQuery('#pwd').focus();return false;}"/>			    </li>			    <li>			    	<input name="password" id="pwd" type="password" class="loginpwd" value="$!{password}"			    		onkeydown="if(event.keyCode==13) {jQuery('#submitButton').click();return false;}" autocomplete="off"/>                    <input name="service" id="service" type="hidden" class="loginpwd" />			    </li>####			    <li>##			    	<input name="code" id="code" type="text" class="loginpwd" value="$!{code}" onclick="JavaScript:this.value=''"##			    		onkeydown="if(event.keyCode==13) {jQuery('#submitButton').click();return false;}"/>##			    </li>##			    <li>			    	<input name="" type="button" id="submitButton" class="loginbtn" value="登录" onclick="login()" />##			    	<input name="" type="button" id="bcode" class="loginbtn" value="发送验证码" onclick="fcode()" />##			    	<label><input name="" type="checkbox" value="" checked="checked" />记住密码</label><label><a href="#">忘记密码？</a></label>##			   	<br /><br />			   	</li>		    </ul>	    </div>	</div></form></body></html>